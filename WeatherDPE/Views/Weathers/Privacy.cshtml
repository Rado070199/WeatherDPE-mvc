@model IEnumerable<WeatherData>

@{
    ViewData["Title"] = "List of Weathers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Temperatura °C</th>
                    <th>Ikona</th>
                    <th>Akcja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Temperature)
                        </td>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@($"https://openweathermap.org/img/wn/{item.Icon}.png")" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Więcej informacji </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Usuń </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>