@model WeatherData

@{
    ViewData["Title"] = "Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>@Model.Date</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="rounded-circle" src="@($"https://openweathermap.org/img/wn/{@Model.Icon}.png")" style="max-width: 150px" />
                </div>
                <div class="form-group">
                    <label asp-for="Temperature" class="control-label">Temperatura °C</label>
                    <input asp-for="Temperature" class="form-control" readonly />
                    <span asp-validation-for="Temperature" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pressure" class="control-label">Ciśnienie</label>
                    <input asp-for="Pressure " class="form-control" readonly />
                    <span asp-validation-for="Pressure" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WindSpeed" class="control-label">Prędkość wiatru</label>
                    <input asp-for="WindSpeed" class="form-control" readonly />
                    <span asp-validation-for="WindSpeed" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a class="btn btn-outline-secondary" asp-action="Privacy">Wróć</a>
                </div>
            </div>
        </div>
    </div>
</div>